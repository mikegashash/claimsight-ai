# ===== Runtime =====
ENV=dev
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO

# ===== API (FastAPI/uvicorn) =====
APP_NAME=claimsight-ai
API_HOST=0.0.0.0
API_PORT=8000
FORWARDED_ALLOW_IPS=*
UVICORN_WORKERS=2

# ===== CORS / Hosts (loosen for dev only) =====
ALLOWED_HOSTS=*
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# ===== Auth (dev defaults; replace in prod) =====
JWT_SECRET=dev-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=60

# ===== LLM / Embeddings (optional) =====
OPENAI_API_KEY=
OPENAI_API_BASE=
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# ===== Storage (pick ONE; SQLite is simplest) =====
# --- Option 1: SQLite (no external services) ---
DATABASE_URL=sqlite:///./data/app.db

# --- Option 2: Postgres via docker-compose ---
POSTGRES_DB=claimsight
POSTGRES_USER=claimsight
POSTGRES_PASSWORD=claimsight
POSTGRES_HOST=db
POSTGRES_PORT=5432
# To use Postgres instead of SQLite, uncomment:
# DATABASE_URL=postgresql+psycopg://$(POSTGRES_USER):$(POSTGRES_PASSWORD)@$(POSTGRES_HOST):$(POSTGRES_PORT)/$(POSTGRES_DB)

# ===== Cache / Queue (optional) =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://$(REDIS_HOST):$(REDIS_PORT)/0

# ===== RAG / Vector DB (optional) =====
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
VECTOR_COLLECTION=claimsight_vectors
